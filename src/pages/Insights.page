                                        calc: function () {return 0},
                                        label: "Total",
                                        type: "number"
                                    },
                                        {
                                            calc: function (dt, row) {
                                                return '£' + (Math.abs(dt.getValue(row, 1) / 1000)).toFixed(0).replace(/\d(?=(\d{3})+\.)/g, '$&,');
                                            },
                                            type: "string",
                                            role: "annotation"
                                        }
                                    ]);
                                    formatter.format(chartData, 1);

