    <div style="font-family: Poppins;">



        <!--intro page version 1 -->

        <div style="width: 100%;text-align: right;">
            <img src="{!$Resource.LiveGroupNewLogo}" width="50%"/>
        </div>
        <div style="font-family:Helvetica,sans-serif;font-weight: bold;font-size: 50px;color:#4b9a99;width:80%;">{!quote.SBQQ__Opportunity2__r.Name}</div>
        <div style="font-family:Helvetica,sans-serif;font-weight: bold;font-size: 35px;color:#4b9a99;width:80%;">{!quote.Version__c}</div>


        <div style="page-break-after:always;"/>



        <!--intro page version 2 -->

        <div style="background-color: #cccccc;height:920px;width:20%;position:relative;">this</div>

        {!quote.Name}
        USER ID: {!user.Name}<br/>
        CONTACT ID: {!contact.Name}

        COVER PAGE

        {!groupSummary}

        <div style="page-break-after:always;"/>

        INTRODUCTION PAGE

        <div style="page-break-after:always;"/>



        <!--intro page version 2 -->




        <apex:repeat value="{!groupMap}" var="group">

            <br/>
            <div style="font-family:Helvetica,sans-serif;font-weight: bold;font-size: 30px;color:#4b9a99;">{!group}</div>
            <br/>

            <table style="font-family: arial, sans-serif;border-collapse: collapse;width: 100%;">
                <tr>
                    <th style="background-color: #4b9a99;color:white;text-align: left;padding: 8px;width: 55%;font-size: 12px;">DESCRIPTION</th>
                    <th style="background-color: #4b9a99;color:white;text-align: right;padding: 8px;width: 8%;font-size: 12px;">DAYS</th>
                    <th style="background-color: #4b9a99;color:white;text-align: right;padding: 8px;width: 8%;font-size: 12px;">QTY</th>
                    <th style="background-color: #4b9a99;color:white;text-align: right;padding: 8px;width: 16%;font-size: 12px;">UNIT PRICE</th>
                    <th style="background-color: #4b9a99;color:white;text-align: right;padding: 8px;width: 16%;font-size: 12px;">TOTAL</th>
                </tr>

                <apex:variable var = "count" value="{!0}"/>
                <apex:repeat value="{!groupMap[group]}" var="line">
                    <apex:variable var="color" value="{!IF(MOD(count,2)==0, '#ffffff','#f4f4f4')}"/>

                    <tr>
                        <td style="font-family:Helvetica,sans-serif;text-align: left;padding-bottom: 8px;padding-top: 4px;padding-left:5px;width: 55%;font-size: 12px;color:black; background-color: {!color};">
                            <apex:outputText value="{!line.SBQQ__Description__c}" escape="false"></apex:outputText>
                        </td>
                        <td style="text-align: right;padding-bottom: 8px;padding-top: 4px;padding-right:5px;width: 8%;font-size: 12px;color:black; background-color: {!color};">{!line.SBQQ__SubscriptionTerm__c}</td>
                        <td style="text-align: right;padding-bottom: 8px;padding-top: 4px;padding-right:5px;width: 8%;font-size: 12px;color:black; background-color: {!color};">
                            <apex:outputText value="{0, number,###,###,##0}"><apex:param value="{!line.SBQQ__Quantity__c}" /></apex:outputText>
                            <!--{!line.SBQQ__Quantity__c}-->
                        </td>
                        <td style="text-align: right;padding-bottom: 8px;padding-top: 4px;padding-right:3px;width: 16%;font-size: 12px;color:black; background-color: {!color};">
                            <apex:outputText value="{0, number,£###,###,##0.00}"><apex:param value="{!line.SBQQ__ListPrice__c}" /></apex:outputText>
                        </td>
                        <td style="text-align: right;padding-bottom: 8px;padding-top: 4px;padding-right:3px;width: 16%;font-size: 12px;color:black; background-color: {!color};">
                            <apex:outputText value="{0, number,£###,###,##0.00}"><apex:param value="{!line.SBQQ__NetTotal__c}" /></apex:outputText>
                        </td>
                    </tr>
                    <apex:variable var="count" value="{!count+1}"/>
                </apex:repeat>

                <tr>
                    <td style="text-align: left;padding-bottom: 8px;padding-top: 4px;padding-left:5px;width: 55%;font-size: 16px;font-weight: bold;">{!group}&nbsp;total:</td>
                    <td style="text-align: right;padding-bottom: 8px;padding-top: 4px;width: 8%;font-size: 12px;"></td>
                    <td style="text-align: right;padding-bottom: 8px;padding-top: 4px;width: 8%;font-size: 12px;"></td>
                    <td style="text-align: right;padding-bottom: 8px;padding-top: 4px;width: 8%;font-size: 12px;"></td>
                    <td style="text-align: right;ppadding-bottom: 8px;padding-top: 4px;padding-right:3px;width: 24%;font-size: 16px;font-weight: bold;">
                        <apex:outputText value="{0, number,£###,###,##0.00}"><apex:param value="{!groupSummary[group]}" /></apex:outputText>
                    </td>

                </tr>

            </table>
            <br/>
