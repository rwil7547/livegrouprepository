                                        enableInteractivity: false,
                                        tooltip: "none"
                                    },
                                    1: {
                                        color: (type === 'opex') ? app.brand.iT : app.brand.second,
                                        format: '£#,###',
                                        enableInteractivity: false,
                                        tooltip: "none"
                                    },
                                    2: {
                                        color: (type === 'opex') ? app.brand.busDev : app.brand.third,
                                        format: '£#,###',
                                        enableInteractivity: false,
                                        tooltip: "none"
                                    },
                                    3: {
                                        color: (type === 'opex') ? app.brand.other : "transparent",
                                        enableInteractivity: true,
                                        tooltip: "none",
                                        annotations: {
                                            stem: {
                                                color: "transparent"
                                            },
                                            textStyle: {
                                                color: 'black',
                                                fontSize: 12.5
                                            }
                                        }
                                    },
