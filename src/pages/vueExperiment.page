            height: auto;
            min-height: 23px;
            text-align: right;
            padding-right: 5px;
        }

        .weekSmall {
            width: calc((100% - 200px) / 12);
        }

        .weekLarge {
            width: 280px;
        }

        .scroll {
            overflow-x: scroll;
        }
        .bold {
            font-weight: bold;
        }
        .noSpill {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .switch {
            font-size: 30px;
            cursor: pointer;
            opacity: 0.5;
