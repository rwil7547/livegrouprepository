                                    forecast += graphData[element][2];
                                    // xxx      += graphData[element][2];
                                    // xxxx     += graphData[element][3];

                                    chartData.addRow([element, budget, forecast, null, null]);
                                });
                            } else {
                                chartData.addColumn('string', 'Date');
