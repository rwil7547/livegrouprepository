                            app.drawBar('profit', app.graphData['profit'], iterator);
                            app.drawLine('profit', app.graphData['profit'], iterator);
                            app.drawBar('opex', app.graphData['opex'], iterator);
                            app.drawLine('opex', app.graphData['opex'], iterator);
